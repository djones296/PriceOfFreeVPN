<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.djone.priceoffreevpn">

    <uses-permission android:name="android.permission.INTERNET" />
    //allows application to open network sockets
    <uses-permission android:name="android.permission.RECIEVE_BOOT_COMPLETED" />
    //allows application to start on device boot
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <activity android:name=".OptionsActivity" />
        <activity android:name=".TutorialsActivity" />
        <activity android:name=".DataPrivacyTutorialsActivity" />
        <activity android:name=".ImproveDataPrivacyActivity" />
        <activity android:name=".ManuallyAddToDatabaseActivity"></activity>
    </application>

</manifest>